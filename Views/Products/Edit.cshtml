@model Exclousive.Models.Product

<div class="container mx-auto mt-4">
  <h2 class="text-2xl font-semibold mb-6">Edit Product</h2>

  <form asp-action="Edit" method="post" enctype="multipart/form-data"
    class="p-4 mb-6 border rounded-lg shadow bg-white">
    <input type="hidden" asp-for="Id" />

    <div class="mb-4">
      <label asp-for="Name" class="block text-gray-700 font-medium mb-2">Name</label>
      <input asp-for="Name"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
      <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
      <label asp-for="Description" class="block text-gray-700 font-medium mb-2">Description</label>
      <textarea asp-for="Description"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        rows="4"></textarea>
      <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
      <label asp-for="Price" class="block text-gray-700 font-medium mb-2">Price</label>
      <input asp-for="Price"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
      <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
      <label asp-for="Stock" class="block text-gray-700 font-medium mb-2">Stock</label>
      <input asp-for="Stock"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
      <span asp-validation-for="Stock" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
      <label asp-for="Category" class="block text-gray-700 font-medium mb-2">Category</label>
      <input asp-for="Category"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
      <span asp-validation-for="Category" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
      <label for="imageFile" class="block text-gray-700 font-medium mb-2">Upload New Image (Optional)</label>
      <input type="file" id="imageFile" name="imageFile" accept="image/*"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
      <span class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
      <label asp-for="ImageUrl" class="block text-gray-700 font-medium mb-2">Current Image</label>
      <p class="text-gray-700 mb-4">
        <img src="@Model.ImageUrl" alt="@Model.Name" class="mt-2 rounded-md shadow-sm w-48 h-auto" />
      </p>
    </div>

    <div class="mb-4">
      <label asp-for="IsOnSale" class="flex items-center mb-2">
        <input asp-for="IsOnSale" type="checkbox" class="mr-2" />
        On Sale
      </label>
      <span asp-validation-for="IsOnSale" class="text-red-500 text-sm"></span>
    </div>

    <button type="submit"
      class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Save
      Changes</button>
  </form>
</div>

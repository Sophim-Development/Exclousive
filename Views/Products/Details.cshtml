@model Exclousive.Models.Product

<div class="container mt-4">
  <h2 class="text-2xl font-bold mb-4">Product Details</h2>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-6">
      <h5 class="text-xl font-semibold mb-4">Product Information</h5>

      <p class="text-gray-700 mb-2">
        <strong class="font-bold">Name:</strong> @Model.Name
      </p>
      <p class="text-gray-700 mb-2">
        <strong class="font-bold">Description:</strong> @Model.Description
      </p>
      <p class="text-gray-700 mb-2">
        <strong class="font-bold">Price:</strong> @Model.Price.ToString("C",
        System.Globalization.CultureInfo.GetCultureInfo("en-US"))
      </p>
      <p class="text-gray-700 mb-2">
        <strong class="font-bold">Stock:</strong> @Model.Stock
      </p>
      <p class="text-gray-700 mb-4">
        <strong class="font-bold">Category:</strong> @Model.Category
      </p>
      <p class="text-gray-700 mb-4">
        <strong class="font-bold">Image:</strong>
        <img src="@Model.ImageUrl" alt="@Model.Name" class="mt-2 rounded-md shadow-sm w-48 h-auto" />
      </p>
      <p class="text-gray-700 mb-4">
        <strong class="font-bold">On Sale:</strong> @(Model.IsOnSale ? "Yes" : "No")
      </p>

      <div class="flex space-x-4">
        <a asp-action="Edit" asp-route-id="@Model.Id"
          class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">Edit</a>
        <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">Back to
          List</a>
      </div>
    </div>
  </div>
</div>

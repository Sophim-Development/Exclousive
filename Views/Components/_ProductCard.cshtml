@model Product

<div class="border border-gray-200 rounded-lg shadow-lg p-4">
  <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-48 object-cover mb-4">
  <h3 class="text-lg font-semibold mb-2">@Model.Name</h3>
  <p class="text-gray-600">@Model.Description</p>
  <p class="text-xl font-bold text-red-500">$@Model.Price</p>
  <button class="bg-blue-500 text-white px-4 py-2 rounded flex items-center">
    <i class="fas fa-shopping-cart mr-2"></i> Add to Cart
  </button>
</div>
